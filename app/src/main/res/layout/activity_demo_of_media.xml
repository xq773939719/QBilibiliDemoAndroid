<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DemoActivityOfMedia">

    <TextView
        android:id="@+id/text_progress"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_total"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="TextView" />

    <Button
        android:id="@+id/button_start_or_pause_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放" />

    <Button
        android:id="@+id/button_stop_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止" />
    <Button
        android:id="@+id/button_select_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择音频" />

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/button_start_or_pause_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放" />
    <Button
        android:id="@+id/button_stop_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止" />

    <Button
        android:id="@+id/button_select_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择视频" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/avatars" />

</LinearLayout>