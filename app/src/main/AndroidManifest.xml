<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xq.bilibilidemo">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BilibiliDemo"
        android:requestLegacyExternalStorage="true">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.OtherActivity" />
        <activity android:name=".activity.DemoActivity" />
        <activity android:name=".activity.DemoActivityOfToolBar" />
        <activity android:name=".activity.DemoActivityOfNavigationView" />
        <activity android:name=".activity.DemoActivityOfFloatingActionButton" />
        <activity android:name=".activity.DemoActivityOfSwipeRefreshLayout" />
        <activity android:name=".activity.DemoActivityOfLearnAndroid" />
        <activity android:name=".activity.DemoActivityOfMedia"/>
        <activity android:name=".activity.DemoActivityOfIJKPlayer"/>
    </application>

</manifest>